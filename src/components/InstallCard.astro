---
import CopyIcon from "../icons/CopyIcon.astro";
import PackageIcon from "../icons/PackageIcon.astro";
import Title from "./Title.astro";
---

<section>
  <Title>Install</Title>
  <div
    class="border-gray-700 flex flex-row justify-between rounded-lg border font-medium items-center text-gray-300 p-4 w-full bg-gray-800"
  >
    <div class="flex flex-row gap-3 items-center">
      <PackageIcon />
      <span id="copyText">npm i ngx-labeled-input</span>
    </div>
    <button
      id="copyButton"
      class="p-2 hover:bg-gray-900 hover:outline outline-1 rounded-lg"
    >
      <CopyIcon />
    </button>
  </div>
</section>
<script>
  document.getElementById("copyButton").addEventListener("click", function () {
    // Obtiene el texto a copiar
    const textToCopy = document.getElementById("copyText").innerText;

    // Crea un elemento temporal para seleccionar y copiar el texto
    const tempInput = document.createElement("input");
    tempInput.value = textToCopy;
    document.body.appendChild(tempInput);

    // Selecciona y copia el texto
    tempInput.select();
    tempInput.setSelectionRange(0, 99999); // Para dispositivos m√≥viles
    document.execCommand("copy");

    // Remueve el elemento temporal
    document.body.removeChild(tempInput);
  });
</script>
